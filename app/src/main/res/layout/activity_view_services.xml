<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#96E696"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/services_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Available Services"
        android:textColor="#1B4332"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/services_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/book_service_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2E8B57"
        android:text="Book Selected Service"
        android:textColor="@android:color/white" />

    <!-- Back to Dashboard Button -->
    <Button
        android:id="@+id/back_to_dashboard_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#2E8B57"
        android:text="Back to Dashboard"
        android:textColor="@android:color/white" />
</LinearLayout>
